<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, :placeholder => "Tell us what you think about this story...", label: false %>
  </div>

  <%= f.hidden_field :story_id %>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
